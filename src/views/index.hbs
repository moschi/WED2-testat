<div id="task-overview">
  <div id="todo-control" class="display-section">
    <a class="link-button action{{#if isFinishedSorting}} active{{/if}} direction{{#if isDirectionDesc}}-desc{{/if}}{{#if isDirectionAsc}}-asc{{/if}}"
      href="/tasks/sort/finished/">Nach Erledigt-Datum</a>
    <a class="link-button action{{#if isCreationSorting}} active{{/if}} direction{{#if isDirectionDesc}}-desc{{/if}}{{#if isDirectionAsc}}-asc{{/if}}"
      href="/tasks/sort/creation/">Nach Erstellungsdatum</a>
    <a class="link-button action{{#if isImportanceSorting}} active{{/if}} direction{{#if isDirectionDesc}}-desc{{/if}}{{#if isDirectionAsc}}-asc{{/if}}"
      href="/tasks/sort/importance/">Nach PrioritÃ¤t</a>
    <a class="link-button action link-button-toggle{{#if showfinished}} active{{/if}}"
      href="/tasks/toggle/showFinished/">Erledigte
      {{#if showfinished}}auslenden{{/if}}{{#if invertedshowfinished}}einblenden{{/if}}</a>
  </div>
  <div id="create-new-row">
    <a class="link-button create" href="/tasks/new">Neuen Task erstellen</a>
  </div>
  <div id="todo-list">
    {{#each todos}}
    <div class="todo-item">
      <div class="todo-finished-date-wrapper">
        <span>{{displayFinishedByDate}}</span>
        <span class="todo-finished-indicator {{#if finished}}checked{{/if}}"></span>
      </div>
      <div class="todo-content-wrapper">
        <h3 class="todo-title">{{title}}</h3>
        <div class="todo-importance">
          {{#times importance}}
          <span>ðŸŸŒ</span>
          {{/times}}
        </div>
        <span class="task-description">{{description}}</span>
      </div>
      <div class="todo-edit-wrapper">
        <a class="link-button edit" href="/tasks/{{_id}}">âœŽ</a>
      </div>
    </div>
    <br />
    {{/each}}
  </div>
</div>